{
  "manifest_version": 3,
  "name": "CFHub",
  "version": "0.1.0",
  "description": "Automatically sync accepted Codeforces submissions to GitHub.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://codeforces.com/*", "https://api.github.com/*"],
  "background": {
    "service_worker": "background/worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/problemset/status*"],
      "js": ["content/problemsetStatusWatcher.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://codeforces.com/submission/*",
        "https://codeforces.com/problemset/submission/*/*"
      ],
      "js": ["content/submissionWatcher.js"],
      "run_at": "document_idle"
    }
  ]
}
